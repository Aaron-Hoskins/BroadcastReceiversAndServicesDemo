<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etStringToBroadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter String To Broadcast"/>

    <Button
        android:id="@+id/btnSendRegualarBroadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Reg. Broadcast"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btnSendLocalBroadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Local Broadcast"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btnSendPermissionBroadcast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Permission Broadcast"
        android:onClick="onClick"/>

    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etBase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter String To Broadcast"/>

    <EditText
        android:id="@+id/etPower"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter String To Broadcast"/>

    <Button
        android:id="@+id/btnCalculateValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Reg. Broadcast"
        android:onClick="onClick"/>

</LinearLayout>